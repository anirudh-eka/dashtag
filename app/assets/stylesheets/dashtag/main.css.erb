body {
  font-family: 'Open Sans', sans-serif;
  word-wrap: break-word;
  color: #FFF;
  background-color: #EFEFEF;
  overflow-x: hidden;
}

body {
  margin-top: 65px;
}

#posts-list
{
  width: 100%;
  margin-bottom: -1.875em;
  width: 100%;
  margin-left: 2%;
}

h1 {
  color: #000;
  text-align: center;
  letter-spacing: .5px;
  font-weight: 300;
  line-height: 2;
  margin: 0;
}

a {
  color: rgb(234, 234, 234);
  text-decoration: none;
  font-weight: 200;
}

a:hover {
  text-decoration: underline;
}

a#hashtag-anchor {
 display: block;
 position: relative;
 top: -250px;
 visibility: hidden;
    -webkit-transition: all .2s ease-in-out;
    -moz-transition: all .2s ease-in-out;
    -ms-transition: all .2s ease-in-out;
    -o-transition: all .2s ease-in-out;
    transition: all .2s ease-in-out;
}

.post-text > iframe {
  margin-top: 20px;
}

.youtube-video {
  height: 200px;
  margin: 0.5em;
}

.vine-video {
  display: block;
  margin: auto;
}

.post-container {
  margin: 5px 5px;
  width: 30%;
  text-align: center;
  width: 92%;
  float: left;
  padding: 1.5% .75%;
  margin: 5px;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
}

.post-picture img {
  width: 60%;
}

.post-container section {
    margin: 11px 0 0 0;
}

.post-text {
  font-size: 20px;
}

.post-username {
  font-weight: bold;
  font-size: 14px;
}

.post-id {
  display: none;
}

.avatar{
 width: 40px;
 height: 40px;
 background-size: cover;
 border-radius: 25px;
 -webkit-border-radius: 25px;
 -moz-border-radius: 25px;
 }

.post-created-at {
  font-size: 11px;
  display: inline-block;
}

.footer {
  display: block;
  margin-top: 30px;
  margin-bottom: 30px;
  text-align: center;
  font-size: 20px;
}

#last_page_requested{
  display:none;
}

.hashtag-title {
  text-decoration: none;
  z-index: 1;
  background-color: #EFEFEF;
  position: fixed;
  top:0; left:0;
  width: 100%;
 }

.hashtag-title:hover {
  background-color: #F6F6F6;
  text-decoration: none;
  cursor: pointer;
  -webkit-transition: background-color 0.7s ease-out;
  -moz-transition: background-color 0.7s ease-out;
  -o-transition: background-color 0.7s ease-out;
  -ms-transition: background-color 0.7s ease-out;
  transition: background-color 0.7s ease-out;
 }

 /*Default Background Colors*/
/*ThoughtWorks Magenta*/
.post-color-1 {
  background: #B11C54;
}

/*ThoughtWorks Orange*/
.post-color-2 {
  background: #F78F31;
}

/*ThoughtWorks Turquoise*/
.post-color-3 {
  background: #80C9D2;
}

/*ThoughtWorks Green  */
.post-color-4 {
  background: #B5B935;
}

.load-older-posts {
  color: black;
  text-align: center;
  padding-top: 70px;
}

.load-older-posts a {
  color: black;
  padding: 5px;
  border: solid 1px;
  border-radius: 1px;
  text-decoration: none;
  background-color: lightgray;
}

.load-older-posts a:hover {
  background-color: #EFEFEF;
  -webkit-transition: background-color 0.7s ease-out;
  -moz-transition: background-color 0.7s ease-out;
  -o-transition: background-color 0.7s ease-out;
  -ms-transition: background-color 0.7s ease-out;
  transition: background-color 0.7s ease-out;
}

@media ( min-width: 768px )
{

    h1 {
        margin: 5px 0 5px 0;
    }

    body {
        margin-top: 85px;
    }
    .post-container
    {
        width: 45.876%;
        margin: 5px;
        padding-bottom: 12.8px;
    }
    #posts-list {
     padding-left: 0;
    }
}

@media ( min-width: 992px )
{

    h1 {
        margin: 10px 0 10px 0;
    }

    body {
        margin-top: 95px;
    }
    #posts-list
    {
        padding-left: 0;
        width: 100%;
        overflow: hidden;
        margin-bottom: -1.875em;
        margin-top: 115px;
    }

    .post-container {
        text-align: center;
        width: 30%;
        float: left;
        margin: 5px;
    }
}
