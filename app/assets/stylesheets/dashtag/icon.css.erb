.twitter_icon {
  background:transparent url(<%= asset_path "dashtag/twitterBird.png" %>) no-repeat right;
}

.instagram_icon {
  background:transparent url(<%= asset_path "dashtag/instagram.png" %>) no-repeat right;
}

.twitter_icon, .instagram_icon {
  display: inline-block;
  height: 20px;
  width: 20px;
  float: left;
  background-size: cover;
  padding-left: 10px;
}

a.reply {
  background:transparent url(<%= asset_path "dashtag/reply.png" %>) no-repeat right;
  display:inline-block;
  height:24px;
  width:24px;
}

a.retweet {
  background:transparent url(<%= asset_path "dashtag/retweet.png" %>) no-repeat right;
  display:inline-block;
  height:24px;
  width:24px;
}

a.favorite {
  background:transparent url(<%= asset_path "dashtag/favorite.png" %>) no-repeat right;
  display:inline-block;
  height:24px;
  width:24px;
}

a.reply:hover {
  background: url(<%= asset_path "dashtag/reply_hover.png" %>) no-repeat right;
  height:24px;
  width:24px;
}

a.retweet:hover {
  background: url(<%= asset_path "dashtag/retweet_hover.png" %>) no-repeat right;
  height:24px;
  width:24px;
}

a.favorite:hover {
  background: url(<%= asset_path "dashtag/favorite_hover.png" %>) no-repeat right;
  height:24px;
  width:24px;
}