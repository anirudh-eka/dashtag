{
    "name": "Dashtag",
    "description": "Displays tweets and instagrams of a certain hashtag",
    "website": "https://github.com/anirudh-eka/dashtag",
    "repository": "https://github.com/anirudh-eka/dashtag",
    "success_url": "/",
    "keywords": [
        "Social",
        "twitter",
        "instagram"
    ],
    "scripts": {
        "postdeploy": "bundle exec rake db:migrate"
    },

    "env": {
        "HASHTAGS": {
            "required": true
            },
        "CENSORED_WORDS": {
            "required": false
            },
        "CENSORED_USERS": {
            "required": false
            },
        "TWITTER_BEARER_CREDENTIALS": {
            "required": false
            },
        "INSTAGRAM_CLIENT_ID": {
            "required": false
            },
        "TWITTER_USERS": {
            "required": false
            },
        "INSTAGRAM_USERS": {
            "required": false
            },
        "INSTAGRAM_USER_IDS": {
            "required": false
            },
        "FONT_FAMILY": {
            "required": false
            },
        "HEADER_TITLE": {
            "required": false
            },
        "HEADER_LINK": {
            "required": false
            },
        "HEADER_COLOR": {
            "required": false
            },
        "BACKGROUND_COLOR": {
            "required": false
            },
        "POST_COLOR_1": {
            "required": false
            },
        "POST_COLOR_2": {
            "required": false
            },
        "POST_COLOR_3": {
            "required": false
            },
        "POST_COLOR_4": {
            "required": false
            },
        "API_RATE": {
            "required": false
            },
        "DISABLE_RETWEETS": "true",
        "DB_ROW_LIMIT": "8000"
    },
    "addons": ["heroku-postgresql"]
}
